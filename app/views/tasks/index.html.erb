<ul>
  <% @tasks.each do |task| %>
    <li><% if task.completed %>
      <i class="fa-regular fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "ðŸ—‘", task_path(task), method: :delete, data: {confirm: "Delete #{task.title}?"} %>
